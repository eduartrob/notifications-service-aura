generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// üì± Modelo para almacenar tokens FCM de dispositivos por usuario
model UserDevice {
  id         String   @id @default(uuid())
  userId     String   // ID del usuario (viene de auth-service)
  fcmToken   String   @unique // Token FCM √∫nico por dispositivo
  deviceInfo String?  // Informaci√≥n opcional del dispositivo (navegador, OS, etc.)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId]) // √çndice para b√∫squedas r√°pidas por userId
  @@map("user_devices")
}
